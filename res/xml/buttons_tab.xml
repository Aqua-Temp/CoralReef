<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/buttons_title"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <PreferenceCategory
      android:key="navigationbar_settings"
      android:title="@string/navbar_category_title">

   <PreferenceScreen
         android:fragment="com.dui.settings.fragments.NavbarSettings"
         android:key="flash_navbar_settings"
         android:summary="@string/navigationbar_settings_summary"
         android:title="@string/navbar_settings_title" />
   </PreferenceCategory>

   <PreferenceCategory
      android:key="power_menu"
      android:title="@string/power_menu_category_title">

   <PreferenceScreen
	     android:key="power_menu"
         android:title="@string/power_menu_title"
         android:summary="@string/power_menu_title_summary"
	     android:fragment="com.aquarios.settings.fragments.PowerMenuSettings" />
   </PreferenceCategory>

   <PreferenceCategory
      android:key="volume_rocker"
      android:title="@string/volume_rocker_category_title">

   <ListPreference
         android:key="screenrecord_chord_type"
         android:title="@string/screen_record_chord_title"
         android:entries="@array/screen_record_chord_entries"
         android:entryValues="@array/screen_record_chord_values" />

   <SwitchPreference
         android:key="volume_rocker_wake"
         android:summary="@string/volume_rocker_wake_summary"
         android:title="@string/volume_rocker_wake_title"
         android:defaultValue="false"
         android:disableDependentsState="true" />

   <com.aquarios.settings.preference.SystemSettingSwitchPreference
         android:key="swap_volume_buttons"
         android:title="@string/swap_volume_buttons_title"
         android:summary="@string/swap_volume_buttons_summary"
         android:defaultValue="false"/>

   <SwitchPreference
         android:key="volume_rocker_music_controls"
         android:summary="@string/volume_rocker_music_controls_summary"
         android:title="@string/volume_rocker_music_controls_title"
         android:defaultValue="true"
         android:dependency="volume_rocker_wake" />

    <com.aquarios.settings.preference.SecureSettingSwitchPreference
        android:key="sysui_volume_down_silent"
        android:title="@string/volbtn_down_zen_title"
        android:summary="@string/volbtn_down_zen_summary"
        android:defaultValue="true"/>

    <com.aquarios.settings.preference.SecureSettingSwitchPreference
        android:key="sysui_volume_up_silent"
        android:title="@string/volbtn_up_zen_title"
        android:summary="@string/volbtn_up_zen_summary"
        android:defaultValue="true" />

    <com.aquarios.settings.preference.SecureSettingSwitchPreference
        android:key="sysui_show_full_zen"
        android:title="@string/vol_zen_title"
        android:summary="@string/vol_zen_summary"
        android:defaultValue="false"/>

   </PreferenceCategory>

</PreferenceScreen>
